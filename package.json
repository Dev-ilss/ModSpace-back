{
  "name": "api-dev-ilss",
  "version": "0.1.0",
  "description": "API para sitio Dev-ilss de Grupo Dev-ilss",
  "author": "Raul E. Aguirre H.",
  "contributors": [
    "https://github.com/ysp0lur"
  ],
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "document": "typedoc --out docs",
    "typeorm": "ts-node --project ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migrations:generate": "npm run typeorm -- migration:generate -n",
    "migrations:run": "npm run typeorm -- migration:run",
    "migrations:show": "npm run typeorm -- migration:show",
    "migrations:revert": "npm run typeorm -- migration:revert",
    "migrations:drop": "npm run typeorm -- migration:drop",
    "schema:drop": "npm run typeorm -- schema:drop",
    "build:dev": "npm run build && pm2 start ecosystem.config.js",
    "build:daemon": "npm run build && pm2 start ecosystem.config.js --env production",
    "kill-ps": "pm2 stop ModSpace-API-v1 && pm2 delete ModSpace-API-v1",
    "build-docker:dev": "docker-compose --env-file ./.env.development up & npm run build:dev",
    "build-docker:prod": "docker-compose --env-file ./.env.production up & npm run build:daemon",
    "kill-ps-docker:dev": "pm2 stop ModSpace-API-v1 && pm2 delete ModSpace-API-v1 && docker-compose --env-file ./.env.development down",
    "kill-ps-docker:prod": "pm2 stop ModSpace-API-v1 && pm2 delete ModSpace-API-v1 && docker-compose --env-file ./.env.production down"
  },
  "dependencies": {
    "@akanass/nestjsx-crypto": "^1.1.0",
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.6.17",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.17",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.17",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/typeorm": "^7.1.5",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^3.4.3",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "csurf": "^1.11.0",
    "express-rate-limit": "^5.2.6",
    "helmet": "^4.6.0",
    "moment": "^2.29.1",
    "mysql": "^2.18.1",
    "nest-access-control": "^2.0.2",
    "node-forge": "^0.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.1.0",
    "swagger-ui-express": "^4.1.6",
    "typedoc": "^0.20.36",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.17",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.12",
    "@types/jest": "26.0.23",
    "@types/node": "^15.6.1",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "eslint": "7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "jest": "27.0.3",
    "prettier": "^2.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "27.0.1",
    "ts-loader": "^9.2.2",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
